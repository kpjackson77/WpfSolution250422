<UserControl x:Class="WpfDemoApp.FlowDocControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDemoApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <FlowDocumentPageViewer>
            <FlowDocument>
                <Section Background="BlanchedAlmond">
                    <Paragraph>
                        <Run FontSize="20">The quick brown fox jumps over the lazy dog!</Run>
                        <Run FontSize="24">The quick brown fox jumps over the lazy dog!</Run>
                    </Paragraph>
                </Section>
            </FlowDocument>
        </FlowDocumentPageViewer>
    </Grid>
</UserControl>
